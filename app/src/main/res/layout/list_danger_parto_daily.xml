<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_test"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:background="@drawable/item_seletor"
        android:layout_width="match_parent"
        android:layout_height="130dp">


        <TextView
            android:id="@+id/text_worker"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/text_time"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_below="@+id/text_worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/text_process"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_below="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/text_scene"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_below="@+id/text_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

            <ImageView
                android:id="@+id/image_scene"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                />

    </RelativeLayout>

</android.support.v7.widget.CardView>

